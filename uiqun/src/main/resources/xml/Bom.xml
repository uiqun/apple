<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.uiqun.dao.BomDao">
    <insert id="insertBoms">
        INSERT INTO `bom`(bid,pn,des,mfgï¼Œ`usage`,map,price,dtime)
          VALUES
          <foreach collection="list" item="outList" separator="," close=";">
              <foreach collection="outList" item="intList" open="(" close=")" separator="," index="index">
                <if test="index == 0">
                    (SELECT id FROM `pntype` WHERE `name` LIKE  concat('%',#{intList}))
                </if>
              <if test="index > 0">
                  #{intList}
              </if>

              </foreach>
          </foreach>
    </insert>



    <select id="queryBomById" resultType="Bom">
        select * from hotlist
        <where>
            <if test="condition.bid >0">
                AND bid = #{condition.bid}
            </if>
        </where>
    </select>
</mapper>