<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="PlatInfoDao">
    <select id="queyrPlatinfoById">
      select * from platinfo where id = #{id}
    </select>

    <update id="updatePlatinfo">
        update platinfo set content = #{content}
    </update>
</mapper>